<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentSplash">

    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.syrous.ycceyearbook.ui.login.FragmentLogin"
        android:label="FragmentLogin"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentGreeting"
            app:destination="@id/fragmentGreeting" />
    </fragment>


    <fragment
        android:id="@+id/fragmentSplash"
        android:name="com.syrous.ycceyearbook.ui.splash.FragmentSplash"
        android:label="FragmentSplash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_fragmentSplash_to_fragmentLogin"
            app:destination="@id/fragmentLogin" />

    </fragment>
    <fragment
        android:id="@+id/fragmentGreeting"
        android:name="com.syrous.ycceyearbook.ui.login.FragmentGreeting"
        android:label="FragmentGreeting"
        tools:layout="@layout/fragment_greeting_screen"/>
</navigation>