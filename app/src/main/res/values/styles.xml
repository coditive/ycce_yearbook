<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Global color attributes -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_on_error</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="android:statusBarColor">@color/color_primary_variant</item>
        <item name="android:navigationBarColor">@color/color_primary_variant</item>
        <!-- Global type attributes -->
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <!-- Global shape attributes -->
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.LargeComponent</item>
        <!-- Chip widget style attribute -->
        <item name="chipStyle">@style/AppChip</item>
        <item name="chipStandaloneStyle">@style/AppChip.Standalone</item>
        <!-- Button widget style attribute -->
        <item name="materialButtonStyle">@style/AppButton</item>
        <!-- Text Field widget style attribute -->
        <item name="textInputStyle">@style/AppTextField</item>
        <!-- Card widget style attribute -->
        <item name="materialCardViewStyle">@style/AppCard</item>
        <!-- Bottom Navigation widget style attribute -->
        <item name="bottomNavigationStyle">@style/AppBottomNavigation</item>
        <!-- Activity Transition -->
        <item name="android:windowActivityTransitions">true</item>
        <!-- Transparent Status and Toolbar  -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="windowActionModeOverlay">true</item>-->

        <item name="navigationIcon">@drawable/up_button_icon</item>
    </style>

    <style name="AppTextAppearance.Chip" parent="TextAppearance.MaterialComponents.Chip" />

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppShapeAppearance.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- NOTE: Chips don't seem to pick up on the theme fontFamily attributes, so these styles are necessary -->
    <!-- See: https://issuetracker.google.com/issues/127453566 -->

    <style name="AppChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/AppTextAppearance.Chip</item>
    </style>

    <style name="AppChip.Standalone" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:textAppearance">@style/AppTextAppearance.Chip</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <!--        <item name="android:textColor">@color/button_text_color</item>-->
        <!--        <item name="iconTint">@color/button_text_color</item>-->
        <!--        <item name="rippleColor">@color/button_ripple_color</item>-->
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!--        <item name="boxBackgroundColor">@color/text_field_background</item>-->
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">24dp</item>
    </style>

    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/color_primary_variant</item>
    </style>


    
    <style name="splash_textView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="home_back" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_on_secondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_title_textView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_secondary_variant</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_subtitle_textView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/color_on_secondary</item>
        <item name="android:textSize">40sp</item>
        <item name="fontWeight">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Home Screen Styles   -->   
                
        <!-- Home Screen title texts  -->
            <style name="title_textView" parent="Widget.AppCompat.TextView">
                <item name="android:textColor">@color/color_on_secondary</item>
                <item name="android:textStyle">bold</item>
                <item name="android:textSize">30sp</item>
                <item name="android:layout_margin">8dp</item>
                <item name="android:letterSpacing">0.01</item>
                <item name="fontWeight">1000</item>
            </style>

        <style name="RoundedFrontBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
        </style>

        <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSizeTopRight">32dp</item>
            <item name="cornerSizeTopLeft">32dp</item>
            <item name="cornerSizeBottomRight">0dp</item>
            <item name="cornerSizeBottomLeft">0dp</item>
        </style>


            <!--   Department's  CardView  Background   -->

    <!--  Recent Screen Styles -->

        <style name="recent_textview" parent="Widget.AppCompat.TextView">
            <item name="textColor">@color/color_on_background</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">40sp</item>
            <item name="fontFamily">@font/montserrat</item>
            <item name="fontWeight">1000</item>
        </style>

        <style name="recent_card_textview" parent="Widget.AppCompat.TextView">
            <item name="textColor">@color/color_on_secondary</item>
            <item name="fontFamily">@font/montserrat</item>
        </style>

        <style name="recent_card_background" parent="Widget.MaterialComponents.CardView">
            <item name="android:background">@drawable/recent_card_border</item>
            <item name="cardBackgroundColor">@color/color_secondary</item>
        </style>


<!--  Semester Screen Styles  -->

        <style name="transparent_app_bar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
            <item name="colorPrimary">@android:color/transparent</item>
            <item name="android:homeAsUpIndicator">@drawable/up_button_icon</item>
        </style>

    <style name="semester_textview" parent="Widget.AppCompat.TextView">
        <item name="textColor">@color/color_on_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="fontWeight">100</item>
    </style>


</resources>
